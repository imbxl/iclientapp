<?xml version='1.0' encoding='utf-8'?>
<widget id="ar.com.iclient" version="1.0.14" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
	<preference name='phonegap-version' value='cli-7.1.0' />
	<preference name='pgb-builder-version' value='2' />
    <name>Iclient</name>
    <description>
        Comprás, ganás
    </description>
    <author email="info@dia8publicidad.com.ar" href="dia8publicidad.com.ar">
		Dia8Publicidad
    </author>
    <content src="index.html" />
    <access origin="*" />
	<allow-navigation href="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <preference name="android-minSdkVersion" value="21" />
		<preference name="android-build-tool" value="gradle" />
		<resource-file src="google-services.json" target="google-services.json" />
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">			
		<icon src="www/assets/icons/ios/icon-small.png" width="29" height="29"/>
		<icon src="www/assets/icons/ios/icon-small-2x.png" width="58" height="58"/>
		<icon src="www/assets/icons/ios/icon-40.png" width="40" height="40"/>
		<icon src="www/assets/icons/ios/icon-40-2x.png" width="80" height="80"/>
		<icon src="www/assets/icons/ios/icon-50.png" width="50" height="50"/>
		<icon src="www/assets/icons/ios/icon-50-2x.png" width="100" height="100"/>
		<icon src="www/assets/icons/ios/icon.png" width="57" height="57"/>
		<icon src="www/assets/icons/ios/icon-2x.png" width="114" height="114"/>
		<icon src="www/assets/icons/ios/icon-60.png" width="60" height="60"/>
		<icon src="www/assets/icons/ios/icon-60-2x.png" width="120" height="120"/>
		<icon src="www/assets/icons/ios/icon-60-3x.png" width="180" height="180"/>
		<icon src="www/assets/icons/ios/icon-72.png" width="72" height="72"/>
		<icon src="www/assets/icons/ios/icon-72-2x.png" width="144" height="144"/>
		<icon src="www/assets/icons/ios/icon-76.png" width="76" height="76"/>
		<icon src="www/assets/icons/ios/icon-76-2x.png" width="152" height="152"/>
        <splash width="640" height="1136" src="www/assets/screens/ios/screen-iphone-568h-2x.png"/>
        <splash width="320" height="480" src="www/assets/screens/ios/screen-iphone-portrait.png"/>
        <splash width="640" height="960" src="www/assets/screens/ios/screen-iphone-portrait-2x.png"/>
        <splash width="750" height="1334" src="www/assets/screens/ios/screen-iphone-portrait-667h.png"/>
        <splash width="1242" height="2208" src="www/assets/screens/ios/screen-iphone-portrait-736h.png"/>
        <splash width="2208" height="1242" src="www/assets/screens/ios/screen-iphone-landscape-736h.png"/>
        <splash width="768" height="1024" src="www/assets/screens/ios/screen-ipad-portrait.png"/>
        <splash width="1536" height="2048" src="www/assets/screens/ios/screen-ipad-portrait-2x.png"/>
        <splash width="1024" height="768" src="www/assets/screens/ios/screen-ipad-landscape.png"/>
        <splash width="2048" height="1536" src="www/assets/screens/ios/screen-ipad-landscape-2x.png"/>
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <preference name="BackupWebStorage" value="none" />
		<resource-file src="GoogleService-Info.plist" />
    </platform>
    <preference name="DisallowOverscroll" value="true" />
    <plugin name="cordova-plugin-dialogs" />
    <plugin name="cordova-plugin-console" />
    <plugin name="cordova-plugin-statusbar" />
    <plugin name="phonegap-plugin-barcodescanner">
        <variable name="CAMERA_USAGE_DESCRIPTION" value="Scan QR-Codes" />
    </plugin>
    <plugin name="phonegap-plugin-push" spec="2.1.3">
		<variable name="FCM_VERSION" value="11.6.2" />
        <variable name="SENDER_ID" value="1089320506180" />
    </plugin>
	<plugin name="cordova-plugin-mauron85-background-geolocation">
	  <variable name="FCM_VERSION" value="11.6.2" />
	  <variable name="GOOGLE_PLAY_SERVICES_VERSION" value="11.6.2" />
	  <variable name="ANDROID_SUPPORT_LIBRARY_VERSION" value="23+" />
	  <variable name="ALWAYS_USAGE_DESCRIPTION" value="App requires background tracking enabled" />
	  <variable name="MOTION_USAGE_DESCRIPTION" value="App requires motion detection" />
	</plugin>
    <icon src="icon.png" />
    <splash src="splash.png" />
</widget>