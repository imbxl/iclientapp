<?xml version='1.0' encoding='utf-8'?>
<widget id="ar.com.iclient" version="1.0.31" xmlns="http://www.w3.org/ns/widgets" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:cdv="http://cordova.apache.org/ns/1.0">
	<preference name='phonegap-version' value='cli-9.0.0' />
	<preference name='pgb-builder-version' value='2' />
    <name>iClient</name>
    <description>
        Comprás, ganás
    </description>
    <author email="info@dia8publicidad.com.ar" href="http://dia8publicidad.com.ar">
		Dia8Publicidad
    </author>
    <content src="index.html" />
	<access origin="http://*/*" />
    <access origin="https://*/*" />
    <access origin="*" />
    <access launch-external="yes" origin="tel:*" />
    <access launch-external="yes" origin="geo:*" />
    <access launch-external="yes" origin="mailto:*" />
    <access launch-external="yes" origin="sms:*" />
    <access launch-external="yes" origin="market:*" />
	<allow-navigation href="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
	
    <platform name="android">
		<preference name="SplashMaintainAspectRatio" value="true"/>
		<preference name="SplashShowOnlyFirstTime" value="true"/>
		<icon density="ldpi" src="www/res/icon/android/ldpi.png"/>
		<icon density="mdpi" src="www/res/icon/android/mdpi.png"/>
		<icon density="hdpi" src="www/res/icon/android/hdpi.png"/>
		<icon density="xhdpi" src="www/res/icon/android/xhdpi.png"/>
		<icon density="xxhdpi" src="www/res/icon/android/xxhdpi.png"/>
		<icon density="xxxhdpi" src="www/res/icon/android/xxxhdpi.png"/>
		<splash density="ldpi" src="www/res/screen/android/splash-port-ldpi.png"/>
		<splash density="mdpi" src="www/res/screen/android/splash-port-mdpi.png"/>
		<splash density="hdpi" src="www/res/screen/android/splash-port-hdpi.png"/>
		<splash density="xhdpi" src="www/res/screen/android/splash-port-xhdpi.png"/>
		<splash density="xxhdpi" src="www/res/screen/android/splash-port-xxhdpi.png"/>
		<splash density="xxxhdpi" src="www/res/screen/android/splash-port-xxxhdpi.png"/>
        <preference name="android-minSdkVersion" value="21" />
		<preference name="android-build-tool" value="gradle" />
		<resource-file src="google-services.json" target="app/google-services.json" />
        <allow-intent href="market:*" />
		<plugin name="cordova-plugin-inappbrowser" />
		<plugin name="cordova-plugin-whitelist" />
		<edit-config file="app/src/main/AndroidManifest.xml" mode="merge" target="/manifest/application">
		  <application android:usesCleartextTraffic="true" />
		</edit-config>
